---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import SocialMediaItems from "./SocialMediaItems.astro";
---

<header
	class="flex flex-col items-center justify-between gap-10 border-b-4 border-emerald-900 p-10 md:flex-row"
>
	<h1 class="font text-4xl font-bold italic sm:text-5xl">
		{SITE_TITLE}
	</h1>
	<rux-global-status-bar
		include-icon="true"
		app-domain="Astro"
		app-name="Theme Switch"
		app-version="v6.12.1"
		menu-icon="apps"
		username=""
		app-state-color=""
		app-state=""
	>
		<rux-clock></rux-clock>

		<rux-switch slot="right-side" id="theme-switch">
			<rux-icon id="theme-icon" slot="label" icon="brightness-3" size="small"
			></rux-icon>
		</rux-switch>
	</rux-global-status-bar>
	<nav>
		<ul
			class="flex w-96 flex-col-reverse items-center justify-center gap-y-5 md:flex-row md:justify-between md:gap-x-5"
		>
			<div class="flex w-52 justify-between gap-4 align-middle">
				<li class="text-lg">
					<HeaderLink href={"/"}>Inicio</HeaderLink>
				</li>
				<li class="text-lg">
					<HeaderLink href={"/blog"}>Blog</HeaderLink>
				</li>
				<li class="text-lg">
					<HeaderLink href={"/about"}>Sobre m√≠</HeaderLink>
				</li>
			</div>
			<SocialMediaItems footer="false" />
		</ul>
	</nav>
</header>
