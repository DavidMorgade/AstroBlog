---
const today = new Date();
import { SITE_TITLE } from "../consts";
import SocialMediaItems from "./SocialMediaItems.astro";
---

<footer class="p-6">
	<div
		class="flex flex-col items-center gap-5 p-10 md:flex-row md:justify-between"
	>
		<div>
			<div class="flex gap-2">
				<p>&copy; {today.getFullYear()}</p>
				<p>{SITE_TITLE}&reg;</p>
			</div>
		</div>
		<ul class="w-36">
			<SocialMediaItems />
		</ul>
	</div>
</footer>
